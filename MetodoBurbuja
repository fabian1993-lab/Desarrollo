        Scanner leer = new Scanner(System.in);
        //Primero se ingresa el tama単o del arreglo
        System.out.println("Ingresa un valor entero para el tama単o de arrelo");
        int tama単o = leer.nextInt();
        
        int[] numeros;
        numeros = new int[tama単o];
        
        // Ingresar datos al arreglo
        for(int i = 0; i < numeros.length; i++){
            System.out.println("Ingrese un numero");
            numeros[i] = leer.nextInt();
        }
        
         // Mostrar datos del arreglo
        for(int i = 0; i < numeros.length; i++){
            System.out.println("El arreglo en la posicion " + i + " es " + numeros[i]);
        }
        
         // Ordenar datos del arreglo 
         // Metodo Burbuja
        for (int i = 0; i < numeros.length; i++) {
            for (int j = 0; j < numeros.length-1; j++) {
                if (numeros[j] > numeros[j+1]) {
                    int aux = numeros[j];
                    numeros[j] = numeros[j+1];
                    numeros[j+1] = aux;
                }
            }
        }
        
        // Mostrar datos del arreglo
        for(int i = 0; i < numeros.length; i++){
            System.out.println("El arreglo en la posicion " + i + " es " + numeros[i]);
        }   
